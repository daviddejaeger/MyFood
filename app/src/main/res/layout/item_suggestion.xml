<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_recipe_title"
        android:layout_margin="10dp"
        tools:text="Spaghetti Bolognaise"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_recipe_description"
        android:layout_marginStart="10dp"
        android:layout_below="@+id/textView_recipe_title"
        tools:text="Snelle manier met frito"
        />

    <TextView
        android:id="@+id/textViewLastEaten"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="125dp"
        android:text="TextView" />

</RelativeLayout>