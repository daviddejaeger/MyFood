<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_recipe_title"
        android:layout_margin="10dp"
        tools:text="Spaghetti Bolognaise"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_recipe_description"
        android:layout_marginStart="10dp"
        android:layout_below="@+id/textView_recipe_title"
        tools:text="Snelle manier met frito"
        />
    <TextView
        android:id="@+id/btnDelete"
        android:drawableStart="@android:drawable/ic_delete"
        android:layout_below="@+id/textView_recipe_description"
        android:padding="5dp"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="35dp" />

    <TextView
        android:id="@+id/btnEdit"
        android:layout_marginEnd="2dp"
        android:padding="5dp"
        android:drawableStart="@android:drawable/ic_menu_edit"
        android:layout_below="@+id/textView_recipe_description"
        android:layout_toStartOf="@+id/btnDelete"
        android:layout_width="wrap_content"
        android:layout_height="35dp" />

</RelativeLayout>